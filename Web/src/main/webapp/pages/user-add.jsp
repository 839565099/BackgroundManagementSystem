<script type="text/javascript">
	/**
	 * 判断唯一用户名 使用ajax只用刷新input框即可
	 */
	function isUniqueUsername() {
		//获取输入框的值
		var username = $("#username").val();
		//通过ajax请求Controller 判断是否重复
		// $.ajax({
		// 	url:"请求路径",
		// 	data:"请求数据",
		// 	dataType:"请求类型：json，text",
		// 	type:"提交方式：get/post",
		// 	success:function (data) {
		// 		回调函数--data 返回流
		// 	}
		// });
		$.ajax({
			url:"${pageContext.request.contextPath}/user/isUniqueUsername",
			data:{"username":username},//使用json格式 把username传过去
			type:"post",
			success:function (data) {
				if (data=="false"){//不可用
					alert("用户名重复~~~")
                   $("#username").attr("style","border:red 1px solid")// 把输入框边框样式设置为红色
                   $("#btn").attr("disabled",true)//设置提交按钮不可用
				}else {
					$("#username").attr("style","")// 把输入框边框样式设置为红色
					$("#username").addClass("form-control")//恢复class样式
					$("#btn").attr("disabled",false)//设置提交按钮不可用
				}
			}
		});

	}
</script>

